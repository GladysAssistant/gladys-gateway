{
  "private": true,
  "name": "gladys-gateway-front",
  "version": "1.0.0",
  "license": "MIT",
  "author": "Pierre-Gilles Leymarie",
  "scripts": {
    "start": "if-env NODE_ENV=production && npm run -s serve || npm run -s dev",
    "build": "preact build --no-prerender --template src/template.html",
    "serve": "preact build --template src/template.html && preact serve",
    "dev": "preact watch --template src/template.html",
    "lint": "eslint src",
    "test-old": "jest",
    "eslint": "eslint src tests",
    "prettier": "prettier --single-quote --write src/**/*.js src/routes/**/*.js"
  },
  "eslintIgnore": [
    "build/*"
  ],
  "devDependencies": {
    "dotenv": "^6.1.0",
    "eslint": "^4.9.0",
    "eslint-config-synacor": "^2.0.2",
    "identity-obj-proxy": "^3.0.0",
    "if-env": "^1.0.0",
    "jest": "^21.2.1",
    "preact-cli": "^2.1.0",
    "preact-cli-plugin-fast-async": "^1.0.1",
    "preact-render-spy": "^1.2.1"
  },
  "dependencies": {
    "@gladysproject/gladys-gateway-js": "^1.0.1",
    "axios": "^0.18.0",
    "bootstrap": "^4.1.3",
    "idb": "^2.1.3",
    "immutability-helper": "^2.8.1",
    "jquery": "^3.3.1",
    "linkstate": "^1.1.1",
    "popper.js": "^1.14.4",
    "preact": "^8.2.6",
    "preact-compat": "^3.17.0",
    "preact-router": "^2.5.7",
    "qrcode": "^1.2.2",
    "react-stripe-elements": "^2.0.1"
  },
  "jest": {
    "verbose": true,
    "setupFiles": [
      "<rootDir>/tests/__mocks__/browserMocks.js"
    ],
    "testRegex": "(/(__tests__|tests)/.*|(\\.|/)(test|spec))\\.jsx?$",
    "testPathIgnorePatterns": [
      "/node_modules/",
      "<rootDir>/tests/__mocks__/*"
    ],
    "testURL": "http://localhost:8080",
    "moduleFileExtensions": [
      "js",
      "jsx"
    ],
    "moduleDirectories": [
      "node_modules"
    ],
    "moduleNameMapper": {
      "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/tests/__mocks__/fileMock.js",
      "\\.(css|less|scss)$": "identity-obj-proxy",
      "^./style$": "identity-obj-proxy",
      "^preact$": "<rootDir>/node_modules/preact/dist/preact.min.js",
      "^react$": "preact-compat",
      "^react-dom$": "preact-compat",
      "^create-react-class$": "preact-compat/lib/create-react-class",
      "^react-addons-css-transition-group$": "preact-css-transition-group"
    }
  }
}
